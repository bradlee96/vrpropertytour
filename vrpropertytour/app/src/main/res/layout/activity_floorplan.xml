<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="351dp"
        android:layout_height="378dp"
        android:layout_marginTop="124dp"
        android:contentDescription="@string/drexel_floor_plan"
        android:src="@drawable/floorplan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/livingRoomButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="152dp"
        android:background="@color/white_transparent"
        android:contentDescription="@string/button_360"
        android:scaleType="fitXY"
        android:src="@drawable/icon360"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />


    <ImageButton
        android:id="@+id/bedroomButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="56dp"
        android:background="@color/white_transparent"
        android:contentDescription="@string/button_360"
        android:scaleType="fitXY"
        android:src="@drawable/icon360"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/livingRoomButton" />


    <ImageButton
        android:id="@+id/kitchenButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="152dp"
        android:background="@color/white_transparent"
        android:contentDescription="@string/button_360"
        android:scaleType="fitXY"
        android:src="@drawable/icon360"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />


</android.support.constraint.ConstraintLayout>

